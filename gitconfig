# core stuff
[core]
    quotepath = false
    whitespace =fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim

# networking
[http]
    sslVerify = false

# difftool
[diff]
    tool = vimdiff

# tree
[alias]
    tree = log --graph --abbrev-commit --pretty=oneline
    calendar = log --date=short --pretty=format:"%h%x09%an%x09%ad%x09%s"
    st = status
    br = branch
    ch = checkout
    df = diff

# colors
[color]
    ui = true
[color "branch"]
    current = green reverse
    local = green
    remote = magenta
[color "diff"]
    meta = yellow
    frag = yellow
    old = magenta reverse
    new = green reverse
    whitespace = white reverse
[color "status"]
    added = green
    changed = cyan
    untracked = magenta reverse
    branch = yellow
[user]
    name = Jordan Acosta
    email = jordan@solfo.com
[url "git@github.com:"]
	insteadof = https://github.com/
[push]
	default = simple
